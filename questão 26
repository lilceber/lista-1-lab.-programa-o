#include <stdio.h>
#include <math.h>

int main() {
 int x1,x2,y1,y2;
 float d;
 
 printf("digite as coordenadas do primeiro ponto (x, enter, y):\n");
 scanf("\n %d\n  %d",&x1,&y1);
 printf("digite as coordenadas do segundo ponto (x, enter, y):\n");
 scanf("\n %d\n  %d",&x2,&y2); 
 
 d = sqrt(pow(x2 - x1, 2) + (pow(y2 - y1, 2)));
 
 printf("a distância entre os pontos é: %f",d);
 
    return 0;
}
