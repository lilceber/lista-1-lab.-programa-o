#include <stdio.h>
int main() {
   float altura, peso;
   char sexo;
   
   printf ("digite seu sexo 'f' ou 'm': ");
   scanf ("%c",&sexo);
   printf ("digite sua altura em metros: ");
   scanf ("%f",&altura);
   
   if (sexo == 'f'){
        peso = 62.1 * altura - 44.7 ;
   } else {
        peso = 72.7 * altura - 58 ;
   }
   printf ("seu peso ideal Ã©: %.1f", peso);
   
return 0;
}
